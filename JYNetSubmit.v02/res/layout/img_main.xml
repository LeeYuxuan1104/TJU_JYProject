    android:layout_height="wrap_content"
    android:background="#ffffff" >
    <GridView
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="3"
        android:verticalSpacing="3dp" >
    </GridView>
</LinearLayout>